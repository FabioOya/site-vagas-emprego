<section id="main"> %>
  <h1><%= @job.title %></h1>
  <dl>
    <dt>Descrição: </dt>
    <dd><%= @job.description %></dd>
    <dt>Habilidades desejadas: </dt>
    <dd><%= @job.skills %></dd>
    <dt>Faixa Salarial:</dt>
    <dd><%= number_to_currency @job.salary %></dd>
    <dt>Nível da vaga: </dt>
    <dd><%= @job.job_level%>
    <dt>Data limite: </dt>
    <dd><%= l @job.end_date %></dd>
    <dt>Localização: </dt>
    <dd><%= @job.location %></dd> 
  </dl>
  <%= link_to 'Voltar', jobs_path %>
</section>
